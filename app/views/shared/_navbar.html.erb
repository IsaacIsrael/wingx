<div id="navbar" class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <% if policy(Company).order? %>
       <%= link_to "Company Orders",company_orders_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end%>
      <% if policy(Company).show? %>
       <%= link_to "Company Flights",company_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end%>

      <% if policy(User).show? %>
      <%= link_to "My Flights", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
      <% end%>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <% if policy(Company).new? %>
              <li>
                <%= link_to new_company_path do %>
                   Create Company
                <% end %>
              </li>
            <% end %>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                Log out
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%# link_to "Join as a Company",new_user_registration_path(company: true), class: "navbar-wagon-item navbar-wagon-link" %>
      <!-- Login link (when logged out) -->
      <%= link_to "Login", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

