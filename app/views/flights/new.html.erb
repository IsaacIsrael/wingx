
  <%= simple_form_for [@flight] do |f| %>
    <%= f.label "What is the cocktail's name?" %>
    <%= f.input :origin %>
    <%= f.input :destiny  %>
    <%= f.input :price %>
    <%= f.input :date %>
    <%= f.input :capacity %>
    <%= f.input :description %>
