 <div class="form-container">
    <div class="header">
      <div class="header-row">
        <div class="big-bold" id="price" data-amount-cents="15000"><%= flight.price_string %></div>
        <div class="small-light"> / PARTICIPANT</div>
      </div>
    </div>

    <div class="flex-between">
      Participants:
      <div class="actions" id="actions">
        <a href="#" class="btn round-bordered incrementer minus" disabled data-offset="-1">-</a>
        <span id="counter" data-count="1">1</span>
        <a href="#" class="btn round-bordered incrementer" data-offset="1">+</a>
      </div>
    </div>

   <%= simple_form_for [@flight, @order] do |f| %>
      <%= f.input :passenger_number %>
      <%= f.button :submit %>
    <% end %>
</div>


